<aw:query cmd="hasPrivilege" privilege="writer">
  <aw:is name="hasPrivilege" aw:newvar.url="activeTemplateDirectory">
    <aw:query cmd="append" name="url" value="/subtopic.html" />
    <aw:query cmd="urlAppend" name="rolonUuid" aw:value="rolonUuid"/>
    <a aw:href="url" target="_top"><span style="color:green; font-style:italic">subtopic</span></a>
  </aw:is>
</aw:query>
